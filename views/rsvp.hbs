<div class="container form-container">
    <h2>RSVP</h2>
    <form class="rsvp-form form" role="form" data-toggle="validator" data-disable="false">
        <div class="form-group">
            <label class="control-label" for="pwd"><strong>Name:</strong></label>

            <div>
                <input type="text" class="form-control" id="name" placeholder="Your name" required>
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label" for="email" ><strong>Email:</strong></label>

            <div>
                <input type="email" class="form-control" id="email" placeholder="Enter email" required>
                <div class="help-block with-errors"></div>
            </div>
        </div>

        <div class="form-group">
            <label for="comment"><strong>Message to Anna and Michael:</strong></label>
            <textarea class="form-control" rows="4" id="comment"></textarea>
        </div>

        <label for="comment"><strong>RSVP Reply:</strong></label>

        <div class="radio">
            <label><input id="attending" type="radio" name="optionsRadios" value="true" required>I will be attending. Its gonna be awesome!</label>
        </div>
        <div class="radio">
            <label><input id="not-attending" type="radio" name="optionsRadios" value="false" required>No I can't come, because i'm so stupid</label>
        </div>

        <div class="form-group">
            <div class="text-center">
                <button type="submit" class="send btn btn-default">Send!</button>
            </div>
        </div>
    </form>
</div>
